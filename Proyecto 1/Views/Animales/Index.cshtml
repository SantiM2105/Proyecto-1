@model IEnumerable<Proyecto_1.Models.Animales>
@{
    ViewData["Title"] = "Inventario de Animales";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-bug"></i> Inventario de Animales</h2>
    <a asp-action="Crear" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Animal
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Especie</th>
                        <th>Hábitat</th>
                        <th>Edad</th>
                        <th>Estado Salud</th>
                        <th>Cuidador</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdAnimal</td>
                                <td>@item.Nombre</td>
                                <td>@item.Especie</td>
                                <td>@item.Habitat</td>
                                <td>@item.Edad años</td>
                                <td>
                                    <span class="badge bg-success">@item.EstadoSalud</span>
                                </td>
                                <td>
                                    @if (item.Cuidador != null)
                                    {
                                        <span>@item.Cuidador.Nombre @item.Cuidador.Apellido</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin asignar</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detalles" asp-route-id="@item.IdAnimal"
                                           class="btn btn-sm btn-info text-white" title="Ver Detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Editar" asp-route-id="@item.IdAnimal"
                                           class="btn btn-sm btn-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Eliminar" asp-route-id="@item.IdAnimal"
                                           class="btn btn-sm btn-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">
                                <i class="bi bi-inbox"></i> No hay animales registrados
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>