<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Selva Digital</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-success border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-tree-fill"></i> Selva Digital
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Inicio
                            </a>
                        </li>

                        <!-- Menú CRUD -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-database"></i> Gestión CRUD
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Cuidadores" asp-action="Index">
                                        <i class="bi bi-person-badge"></i> Cuidadores
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Animales" asp-action="Index">
                                        <i class="bi bi-bug"></i> Inventario Animales
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Visitantes" asp-action="Index">
                                        <i class="bi bi-people"></i> Visitantes
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="MovimientoVisitas" asp-action="Index">
                                        <i class="bi bi-arrow-left-right"></i> Movimiento Visitas
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Menú Visitas -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-ticket-perforated"></i> Visitas
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Visitas" asp-action="Registrar">
                                        <i class="bi bi-plus-circle"></i> Registrar Visita
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Visitas" asp-action="Eliminar">
                                        <i class="bi bi-trash"></i> Eliminar Visita
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Menú Informes -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-file-earmark-text"></i> Informes
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Informes" asp-action="Index">
                                        <i class="bi bi-filter"></i> Por Parámetros
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Menú Gráficos -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-bar-chart"></i> Gráficos
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Graficos" asp-action="Index">
                                        <i class="bi bi-graph-up"></i> Tablero Principal
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Graficos" asp-action="VisitasPorAnimal">
                                        <i class="bi bi-bar-chart-line"></i> Visitas por Animal
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Graficos" asp-action="VisitasPorMes">
                                        <i class="bi bi-calendar3"></i> Visitas por Mes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Graficos" asp-action="AnimalesPorHabitat">
                                        <i class="bi bi-tree"></i> Animales por Hábitat
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["Mensaje"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light mt-5">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; 2025 - Selva Digital - Sistema de Gestión de Zoológico</p>
                </div>
                <div class="col-md-6 text-end">
                    <p>Universidad Distrital Francisco José de Caldas</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>