@model IEnumerable<Proyecto_1.Models.Cuidadores>
@{
    ViewData["Title"] = "Cuidadores";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-person-badge"></i> Gestión de Cuidadores</h2>
    <a asp-action="Crear" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nuevo Cuidador
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-success">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Teléfono</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdCuidadores</td>
                                <td>@item.Nombre</td>
                                <td>@item.Apellido</td>
                                <td>@item.Telefono</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detalles" asp-route-id="@item.IdCuidadores"
                                           class="btn btn-sm btn-info text-white" title="Ver Detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Editar" asp-route-id="@item.IdCuidadores"
                                           class="btn btn-sm btn-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Eliminar" asp-route-id="@item.IdCuidadores"
                                           class="btn btn-sm btn-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                <i class="bi bi-inbox"></i> No hay cuidadores registrados
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>